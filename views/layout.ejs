<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DTrade</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../css/main.css" />
  </head>
  <body>
    <h1>DTrade</h1>
    <br /><br />
    <hr />
    <% if(alerts.validationErrors) { %> <%
    alerts.validationErrors.forEach(function(msg) { %>
    <div class="alert alert-danger">Your<%=msg.param %> has <%=msg.msg %></div>
    <% }) %> <% }%> <% if(alerts.success) { %> <%
    alerts.success.forEach(function(msg) { %>
    <div class="alert alert-success"><%=msg %></div>
    <% }) %> <% }%> <% if(alerts.error) { %> <%
    alerts.error.forEach(function(msg) { %>
    <div class="alert alert-danger"><%=msg %></div>
    <% }) %> <% }%>
    <nav class="navbar-brand">
      <a class="btn btn-outline-primary" href="/trade/quote">Quote</a>
      <a class="btn btn-outline-primary" href="/trade/buy">Buy</a>
      <a class="btn btn-outline-primary" href="/trade/sell">Sell</a>
      <a class="btn btn-outline-primary" href="/api/memes">History</a>
      <a class="btn btn-outline-primary" href="/overview">Overview</a>
      <div class="menu-right">
        <% if(currentUser){ %> Welcome <%=currentUser.firstName%>
        <%=currentUser.lastName%>
        <a class="btn btn-outline-primary" href="/auth/logout">Sign Out</a>
        <%} else { %>
        <a class="btn btn-outline-primary" href="/auth/signin">Sign In</a>
        <a class="btn btn-outline-primary" href="/auth/signup">Sign Up</a>
        <%}%>
      </div>
      <br /><br />
      <%- body %> <br /><br />
    </nav>
    Shared Footer<br />
    <!-- <img src="../images/lucky.jpg" width="400px" /> -->
    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>
    <script src="../js/main.js"></script>
  </body>
</html>
