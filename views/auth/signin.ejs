<h1>Sign In</h1>
<form class="authForm" action="/auth/signin" method="post">
  <div class="form-group">
    <label>Email</label>
    <input
      class="form-control"
      type="email"
      name="emailAddress"
      id="emailAddress"
    />
  </div>
  <br />
  <div>
    <label>Password</label><br />
    <input
      type="password"
      name="password"
      id="password"
      class="form-contorl form-group password"
    />
  </div>
  <br />
  <div>
    <button type="submit" class="btn btn-primary">Sign In</button>
  </div>
</form>
<div class="signUp">
  <form action="/auth/signup">
    <input class="signUp btn btn-primary" type="submit" value="Sign Up" />
  </form>
</div>
